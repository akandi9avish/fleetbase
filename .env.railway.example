# .env.railway.example
# Railway Environment Variables Template for Fleetbase
# Copy these variables to your Railway service environment variables

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================
APP_NAME=Fleetbase
APP_ENV=production
APP_DEBUG=false
APP_URL=https://${RAILWAY_PUBLIC_DOMAIN}

# Generate with: php artisan key:generate --show
# Or: docker run --rm dunglas/frankenphp:1.5.0-php8.2 php -r "echo 'base64:'.base64_encode(random_bytes(32)).PHP_EOL;"
APP_KEY=base64:YOUR_APP_KEY_HERE

# Unique instance identifier (auto-generated in Dockerfile)
# FLEETBASE_INSTANCE_ID=<auto-generated>

# ============================================================================
# DATABASE CONFIGURATION (Railway MySQL-Fleetbase)
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=${{ MySQL-Fleetbase.MYSQLHOST }}
DB_PORT=${{ MySQL-Fleetbase.MYSQLPORT }}
DB_DATABASE=${{ MySQL-Fleetbase.MYSQLDATABASE }}
DB_USERNAME=${{ MySQL-Fleetbase.MYSQLUSER }}
DB_PASSWORD=${{ MySQL-Fleetbase.MYSQLPASSWORD }}

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# CACHE & QUEUE CONFIGURATION (Railway Redis-Fleetbase)
# ============================================================================
REDIS_HOST=${{ Redis-Fleetbase.REDISHOST }}
REDIS_PORT=${{ Redis-Fleetbase.REDISPORT }}
REDIS_PASSWORD=${{ Redis-Fleetbase.REDISPASSWORD }}
REDIS_CLIENT=phpredis

CACHE_DRIVER=redis
CACHE_PREFIX=fleetbase_cache

QUEUE_CONNECTION=redis
QUEUE_PREFIX=fleetbase

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_CHANNEL=stderr
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null
LOG_STACK=single

# ============================================================================
# BROADCASTING & WEBSOCKETS
# ============================================================================
BROADCAST_DRIVER=socketcluster
SOCKET_CLUSTER_HOST=localhost
SOCKET_CLUSTER_PORT=38000
SOCKET_CLUSTER_PATH=/socketcluster

# ============================================================================
# FILESYSTEM & STORAGE
# ============================================================================
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# AWS S3 Configuration (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_URL=
# AWS_ENDPOINT=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=YOUR_SENDGRID_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@reeup.io
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: Use Postmark
# MAIL_MAILER=postmark
# POSTMARK_TOKEN=

# Alternative: Use Mailgun
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=

# ============================================================================
# NOTIFICATION CHANNELS
# ============================================================================
# Twilio SMS
# TWILIO_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM=

# Slack
# SLACK_WEBHOOK_URL=

# Firebase FCM (Push Notifications)
# FIREBASE_CREDENTIALS=
# FIREBASE_PROJECT_ID=

# Apple Push Notifications
# APNS_CERTIFICATE_PATH=
# APNS_CERTIFICATE_PASSPHRASE=

# ============================================================================
# PAYMENT GATEWAYS
# ============================================================================
# Stripe
# STRIPE_KEY=
# STRIPE_SECRET=
# STRIPE_WEBHOOK_SECRET=

# ============================================================================
# MAPPING & GEOCODING
# ============================================================================
# Google Maps
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY
GOOGLE_MAPS_LOCALE=en

# Mapbox (alternative to Google Maps)
# MAPBOX_PUBLIC_TOKEN=
# MAPBOX_ACCESS_TOKEN=

# ============================================================================
# SEARCH & INDEXING
# ============================================================================
# Scout driver (algolia, meilisearch, database, collection)
SCOUT_DRIVER=database

# Algolia
# ALGOLIA_APP_ID=
# ALGOLIA_SECRET=

# Meilisearch
# MEILISEARCH_HOST=http://127.0.0.1:7700
# MEILISEARCH_KEY=

# ============================================================================
# API INTEGRATIONS
# ============================================================================
# OpenAI / GPT
# OPENAI_API_KEY=

# Sentry Error Tracking
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# JWT Configuration
# JWT_SECRET=
# JWT_ALGO=HS256
# JWT_TTL=60

# OAuth Configuration
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=

# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_REDIRECT_URI=

# ============================================================================
# CONSOLE (EMBER.JS FRONTEND) CONFIGURATION
# ============================================================================
CONSOLE_HOST=https://${RAILWAY_PUBLIC_DOMAIN}
CONSOLE_PATH=/fleetbase/console

# ============================================================================
# OCTANE (FRANKENPHP) CONFIGURATION
# ============================================================================
OCTANE_SERVER=frankenphp
OCTANE_HTTPS=on
FRANKENPHP_CONFIG="worker ./public/index.php"

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================
# PHP OPcache
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_ACCELERATED_FILES=20000

# ============================================================================
# DEVELOPMENT & DEBUGGING (Disable in production!)
# ============================================================================
# TELESCOPE_ENABLED=false
# DEBUGBAR_ENABLED=false

# ============================================================================
# CUSTOM REEUP.IO CONFIGURATIONS
# ============================================================================
# Add your reeup.io-specific environment variables here

# Cannabis compliance tracking
# COMPLIANCE_MODE=strict
# STATE_LICENSE_NUMBER=
# METRC_API_KEY=

# Custom integrations
# DUTCHIE_API_KEY=
# DUTCHIE_BASE_URL=

# Slack workspace integration
# REEUP_SLACK_BOT_TOKEN=
# REEUP_SLACK_SIGNING_SECRET=

# Custom Redis keys prefix
# REEUP_REDIS_PREFIX=reeup:

# ============================================================================
# RAILWAY-SPECIFIC VARIABLES (Automatically provided by Railway)
# ============================================================================
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=<auto>
# RAILWAY_SERVICE_ID=<auto>
# RAILWAY_SERVICE_NAME=<auto>
# RAILWAY_DEPLOYMENT_ID=<auto>
# RAILWAY_PUBLIC_DOMAIN=<auto>
# RAILWAY_PRIVATE_DOMAIN=<auto>
# RAILWAY_GIT_COMMIT_SHA=<auto>
# RAILWAY_GIT_BRANCH=<auto>
